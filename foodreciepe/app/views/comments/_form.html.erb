<%= form_for([@recipe, @recipe.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :commentor %><br />
      <%= f.text_field :commentor %>
    </div>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :name %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>